<%= form_for :illustration, url: illustrations_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :path %><br>
    <%= f.text_field :path %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, :rows => "10", :cols => "60" %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>